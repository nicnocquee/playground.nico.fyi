generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id        String   @id @default(cuid())
  name      String
  artist    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  songs     Song[]

  @@index([name])
  @@map("albums")
}

model Song {
  id        String   @id @default(cuid())
  name      String
  album     Album    @relation(fields: [albumId], references: [id])
  albumId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([albumId])
  @@map("songs")
}
