generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  directUrl = env("DATABASE_URL")
  url       = env("DATABASE_URL_POOLING") // uses a direct connection
}

model Album {
  id        Int      @id @default(autoincrement())
  name      String
  artist    String
  year      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  songs     Song[]

  @@index([name])
  @@map("albums")
}

model Song {
  id          Int      @id @default(autoincrement())
  name        String
  album       String
  albumDetail Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId     Int
  artist      String
  year        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([albumId])
  @@map("songs")
}

model Log {
  id        Int      @id @default(autoincrement())
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("logs")
}
